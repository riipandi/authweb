{% layout 'layouts/site-layout' %}

{% block 'heading' %}
  <div>
    <h1 class="text-3xl font-bold text-white">Usage Analytics</h1>
    <p class="text-violet-100 mt-2">Real-time insights into how our tools are helping users</p>
  </div>
{% endblock %}

<main class="dark:bg-gray-800">
  <iframe
    plausible-embed
    src="{{ embedURL }}"
    scrolling="no"
    frameborder="0"
    loading="lazy"
    class="w-full min-w-full h-[1600px]"
  >
  </iframe>
</main>

{% block 'footerScript' %}
  <script async src="/js/embed.host.js"></script>
{% endblock %}
